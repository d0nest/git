{
   "compilerOptions": {
      "lib": [
         "es6",
         "dom"
      ],
      "target": "ESNext",
      "module": "ESNext",
      "moduleResolution": "node",
      "outDir": "./build",
      "rootDir": "./src",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "strict": true,
      "skipLibCheck": true
   },
   "include": [
      "src/**/*.ts"
, "./**/*.ts"   ]
}